extends layout

block content
  div.container
    div.row
      div.span10
        p.ui-state-default.ui-corner-all.ui-helper-clearfix(style='padding:8px; text-align: center;') Zone Configuration
      div.span2
        a.btn.btn-success(href="#addNewZone", data-toggle="modal") Add New Zone
    div.row
      div.span12
        div#list-zones
    div.hide.modal#modal-change-colour
      div.modal-header
        button.close.revert-colour(data-dismiss="modal") x
        h3 Change Zone Colour
      div.modal-body
        div#colour-wheel
      div.modal-footer
        button.btn.btn-primary(data-dismiss="modal") Done
        button.btn.revert-colour(data-dismiss="modal") Cancel
    div.row
      div.hide.modal#modal-delete-zone
        form#form-delete-zone
          div.modal-header
            button.close(data-dismiss="modal") x
            h3 Delete Zone
          div.modal-body
            input(type="hidden", id="delete-zone-id", name="delete-zone-id", value="")
            p Are you sure?
          div.modal-footer
            button.btn.btn-close(data-dismiss="modal") Cancel
            button.btn.btn-primary(type="submit") Delete
    div.row
      div.span1.skip11
        div.hide.modal#addNewZone(aria-hidden="true")
          form#createNewZone(data-async)
            div.modal-header
              button.close(data-dismiss="modal") x
              h3 Create New Zone
            div.modal-body
              input(type="text", id="name", name="name", placeholder="Zone Name")
              input(type="text", id="description", name="description", placeholder="Zone Description")
              div#lightsCheckboxList
            div.modal-footer
              button.btn.btn-close(data-dismiss="modal", aria-hidden="true") Cancel
              button.btn.btn-primary(type="submit") Create
